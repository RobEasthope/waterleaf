{
  "name": "waterleaf",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "pnpm install && concurrently \"pnpm:remix\" \"pnpm:sanity-typegen:watch\"",
    "remix": "remix vite:dev",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "sanity-typegen": "sanity schema extract && sanity typegen generate",
    "sanity-typegen:watch": "npm-watch sanity-typegen",
    "prepare": "pnpm run sanity-typegen",
    "test": "vitest"
  },
  "watch": {
    "sanity-typegen": {
      "patterns": [
        "./"
      ],
      "extensions": "schema.ts",
      "quiet": true,
      "runOnChangeOnly": true
    }
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@portabletext/react": "^3.0.18",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@resvg/resvg-js": "^2.6.2",
    "@sanity/asset-utils": "^1.3.0",
    "@sanity/block-tools": "^3.43.0",
    "@sanity/client": "^6.18.2",
    "@sanity/demo": "^1.0.2",
    "@sanity/icons": "^2.11.8",
    "@sanity/image-url": "^1.0.2",
    "@sanity/presentation": "^1.15.8",
    "@sanity/preview-url-secret": "^1.6.13",
    "@sanity/react-loader": "^1.9.19",
    "@sanity/schema": "^3.43.0",
    "@sanity/ui": "^1.9.3",
    "@sanity/vision": "^3.43.0",
    "@sanity/visual-editing": "^1.8.21",
    "@vercel/remix": "^2.9.2",
    "add": "^2.0.6",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "groq": "^3.43.0",
    "isbot": "latest",
    "jsdom": "^24.0.0",
    "lucide-react": "^0.299.0",
    "npm-watch": "^0.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "rxjs": "^7.8.1",
    "sanity": "^3.43.0",
    "sanity-pills": "^2.0.0",
    "sanity-plugin-iframe-pane": "^2.6.1",
    "satori": "^0.10.13",
    "styled-components": "^6.1.11",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.4.0",
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@storybook/addon-a11y": "^8.1.3",
    "@storybook/addon-essentials": "^8.1.3",
    "@storybook/addon-interactions": "^8.1.3",
    "@storybook/addon-links": "^8.1.3",
    "@storybook/addon-onboarding": "^8.1.3",
    "@storybook/blocks": "^8.1.3",
    "@storybook/react": "^8.1.3",
    "@storybook/react-vite": "^8.1.3",
    "@storybook/test": "^8.1.3",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/react": "^15.0.7",
    "@thoughtbot/eslint-config": "^1.0.2",
    "@types/jsdom": "^21.1.6",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-storybook": "^0.8.0",
    "inquirer": "^9.2.22",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "storybook": "^8.1.3",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
